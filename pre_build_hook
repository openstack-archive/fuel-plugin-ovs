#!/bin/bash

set -eux

BUILD_FOR=${BUILD_FOR:-ubuntu}
DIR="$(dirname `readlink -f $0`)"

function build_pkg {
  case $1 in
    ubuntu)
      mkdir -p ${DIR}/repositories/ubuntu
      cd ${DIR}/ovs_build
      sudo docker build -t ovs_build .
      sudo docker run -v ${DIR}/repositories/ubuntu:/deb -t  ovs_build /ovs_build/build-ovs-dpdk.sh
      sudo docker run -v ${DIR}/ovs_package/ubuntu/:/deb -t  ovs_build /ovs_build/build-ovs-nsh-dpdk.sh
      ;;
    *) echo "Not supported system"; exit 1;;
  esac
}

for system in $BUILD_FOR
do
  build_pkg $system
done
